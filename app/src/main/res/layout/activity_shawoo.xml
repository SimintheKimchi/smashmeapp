<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Shawoo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                app:srcCompat="@drawable/shawoo_2" />

            <TextView
                android:id="@+id/textview_showcase_name"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:fontFamily="sans-serif-condensed"
                android:paddingTop="15dp"
                android:text="Shawoo"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="Shawoo" />

            <TextView
                android:id="@+id/textview_showcase_weightclass"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:fontFamily="monospace"
                android:padding="6dp"
                android:text="George Lopez"
                android:textAlignment="center"
                android:textSize="18sp"
                tools:text="George Lopez" />

            <TextView
                android:id="@+id/textview_showcase_playtype"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:fontFamily="monospace"
                android:padding="6dp"
                android:text="Meatball"
                android:textAlignment="center"
                android:textSize="18sp"
                tools:text="Meatball" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:fontFamily="monospace"
                android:paddingTop="20dp"
                android:text="How to Play"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="How to Play" />

            <TextView
                android:id="@+id/textview_showcase_instructions"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:fontFamily="monospace"
                android:padding="6dp"
                android:text="If George Lopez ate a meatball, then Shawoo will spawn. This meatball flies, and he goes NYOOOM. You can hear NYOOOM from anywhere because BlueYeti microphone OP. George Lopez actually responded to Saul on Instagram, so that was cool. He lives in 116 Marmion Way Unit 17, South Pasadena. "
                android:textAlignment="center"
                android:textSize="18sp"
                tools:text="If George Lopez ate a meatball, then Shawoo will spawn. This meatball flies, and he goes NYOOOM. You can hear NYOOOM from anywhere because BlueYeti microphone OP. George Lopez actually responded to Saul on Instagram, so that was cool. He lives in 116 Marmion Way Unit 17, South Pasadena. " />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:fontFamily="monospace"
                android:paddingTop="20dp"
                android:text="Example"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gifview_showcase_combo"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/comboshawoo" />


        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>